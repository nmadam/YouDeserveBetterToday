<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.nancyadam.ydbt.entity.UserRole" table="user_roles">
        <meta attribute="class-description">
            This class contains the user roles.
        </meta>
        <composite-id mapped="true" class="com.nancyadam.ydbt.entity.UserRole">
            <key-property name="userName" column="user_name" />
            <key-property name="roleName" column="role_name" />
        </composite-id>
    </class>
</hibernate-mapping>