<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.nancyadam.ydbt.entity.UserRoles" table="user_roles">
        <meta attribute="class-description">
            This class contains the user roles.
        </meta>
        <id name="userName" type="java.lang.String" column="user_name">
            <generator class="native"/>
        </id>
        <property name="roleName" column="role_name" type="string"/>
    </class>
</hibernate-mapping>